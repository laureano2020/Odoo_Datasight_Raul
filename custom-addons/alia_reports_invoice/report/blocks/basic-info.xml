<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>

    <template name="Alia Reports - Invoice Block: Basic Info" id="alia_reports_invoice.basic_info">

      <div id="alia-reports-invoice-basic-info" class="alia-reports-block">

        <!-- Invoice Title: Type -->
        <div class="row no-gutters report-title">
          <div class="col-12">
            <t t-call="alia_reports_invoice.report_title" t-lang="lang"/>
          </div>
        </div>


        <!-- Client & Invoice Info -->
        <div class="row report-info">
          <div class="col-8">
            <!-- Block: Client Info -->
            <t t-call="alia_reports_base.client_info" t-lang="lang"/>
          </div>
          <div class="col-4">
            <!-- Block: Invoice Info -->
            <t t-call="alia_reports_invoice.invoice_info" t-lang="lang"/>
          </div>
        </div>

      </div>

    </template>

  </data>
</odoo>
