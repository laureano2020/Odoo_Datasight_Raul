<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>

    <template name="Alia Reports - Stock Block: Delivery Slip Basic Info"
              id="alia_reports_stock.delivery_slip_basic_info">

      <div id="alia-reports-stock-delivery-slip-basic-info" class="alia-reports-block">

        <!-- Report Type -->
        <div class="row no-gutters report-title">
          <div class="col-12">
            <t t-call="alia_reports_stock.delivery_slip_report_title" t-lang="lang"/>
          </div>
        </div>

        <!-- Report Client & Order Info -->
        <div class="row">
          <div class="col-7">
            <!-- Block: Client Info -->
            <t t-call="alia_reports_base.client_info" t-lang="lang"/>
          </div>
          <div class="col-5">
            <!-- Block: Delivery Slip Info -->
            <t t-call="alia_reports_stock.delivery_slip_report_info" t-lang="lang"/>
          </div>
        </div>

      </div>

    </template>

  </data>
</odoo>
