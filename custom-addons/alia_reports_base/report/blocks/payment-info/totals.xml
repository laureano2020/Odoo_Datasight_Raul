<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>

    <template name="Alia Reports - Base Block: Amount Totals" id="alia_reports_base.totals">

      <div id="alia-reports-base-totals" class="alia-reports-block">

        <div class="report-amount-wrapper">

          <!-- Subtotal -->
          <div class="row row-no-gutters amount-untaxed">
            <div class="col-5 text-left">Subtotal</div>
            <div class="col-7 text-right no-wrap">
              <strong t-field="doc.amount_untaxed"/>
            </div>
          </div>

          <!-- Taxes -->
          <div class="row row-no-gutters amount-tax">
            <div class="col-4 text-left">Impuestos</div>
            <div class="col-8 text-right no-wrap">
              <strong t-field="doc.amount_tax"/>
            </div>
          </div>


          <!-- Amount total -->
          <div class="row row-no-gutters amount-total">
            <div class="col-4 text-left">Total</div>
            <div class="col-8 text-right report-numeric no-wrap">
              <strong t-field="doc.amount_total"/>
            </div>
          </div>

        </div>
      </div>

    </template>

  </data>
</odoo>
