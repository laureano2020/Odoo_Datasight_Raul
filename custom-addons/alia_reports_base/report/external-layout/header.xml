<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>

    <template name="Alia Reports - Base Header" id="alia_reports_base.header">

      <div id="alia-reports-base-header" class="header">

        <div class="row">

          <!-- Header Logo -->
          <div id="header-logo" class="col-6">
            <div class="header-logo-wrapper">
              <img t-if="company.logo_web" t-att-src="image_data_uri(company.logo)"/>
            </div>
          </div>

          <!-- Header Info -->
          <div id="header-info" class="col-6">
            <div class="header-info-wrapper">
              <t t-call="alia_reports_base.header_company_info"/>
            </div>
          </div>

        </div>

      </div>

    </template>

  </data>
</odoo>
